{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "headers": { "Content-Type": "application/xml" },
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "headers": { "Content-Type": "text/plain" },
      "dest": "/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
